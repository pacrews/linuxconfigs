syntax on
filetype on
set laststatus=2
set noswapfile
set number
set noexpandtab
set softtabstop=4
set shiftwidth=4
set tabstop=4
set nobackup
set incsearch
set autoindent
set showmode
set smartindent
set relativenumber
set cursorline
set cursorcolumn
set splitbelow
set splitright
set colorcolumn=91
set mouse=a
map <LeftMouse> <nop>
noremap <MouseWheelUp> <C-u>
noremap <MouseWheelDown> <C-d>
autocmd InsertEnter * normal zz
colorscheme elflord
